
//////// Two Pointers ////////
const twoSum = function(numbers, target) {
    const result = [];
    let sum = Infinity;
    let l = 0;
    let r = numbers.length -1;
    
    while (sum !== target) {
        sum = numbers[l] + numbers[r];
        if (sum > target) {
            r--;
        } else if (sum < target) {
            l++;
        } else if (sum === target){
            result.push(l+1, r+1);
        }
    }
    return result;
};
